<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" charset="UTF-8"/>
    <link rel="stylesheet" type="text/css" href="design.css">
    <link rel="icon" type="image/png" href="logo.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Register</title>

    <style>
        body {background-image: url("background_1.png")}
    </style>

</head>
<body>
  <img src="logo.png" height="105px"><br/><br><br>
  <h1>REGISTER</h1><br><br>

  <form action="/register/form" method="post">  
        <div class="reg-container">    
            <input type="text" class="reg-control" id="first_name" name="first_name" placeholder="First Name" required>      
            <input type="text" class="reg-control" id="last_name" name="last_name" placeholder="Last Name" required>
            <input type="text" class="reg-control" id="age" name="age" placeholder="Age" required>      
            <input type="text" class="reg-control" id="address" name="address" placeholder="Address" required>
            <input type="text" class="reg-control" id="email" name="email" placeholder="Email" required>      
            <input type="password" class="reg-control" id="password" name="password" placeholder="Password" required><br><br><br>

        <button type="submit" class="css-button">
            <span class="css-button-icon">
                <i class="fa fa-arrow-right"></i>
            </span>
            <span class="css-button-text">
                <span>REGISTER<span>
            </span>
        </button>

        <p class="log">Already have an account? Login <a href="/">here</a></p>

        </div>

        <div id="overlay" class="overlay" style="display: none;"></div>
    </form>
    
    <div id="success-popup" class="popup" style="display: none;">
        <p>Registration successful!<br><br><a href='/'>Login</a></p>
    </div>
    <script>
        // Function to show the success popup and overlay
        function showSuccessPopup() {
            const successPopup = document.getElementById('success-popup');
            successPopup.style.display = 'block';

            const overlay = document.getElementById('overlay');
            overlay.style.display = 'block';
        }
    
        // Check for a success message in the URL (e.g., /register?success=true)
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('success') && urlParams.get('success') == 'true') {
            showSuccessPopup();
        }
    </script>

</body>
</html>